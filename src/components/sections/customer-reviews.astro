---
import { REVIEWS } from '@/src/constants/index'
import ReviewCard from '@components/astro/review-card.astro'
---
<section class='padding bg-pale-blue'>
  <section class='max-container'>
    <h3 class='font-palanquin text-center text-4xl font-bold'>
      What Our
      <span class='text-coral-red'> Customers </span>
      Say?
    </h3>
    <p class='m-auto mt-4 max-w-lg  text-center info-text'>
      Hear genuine stories from our satisfied customers about their
      exceptional experiences with us.
    </p>

    <div class='mt-24 flex flex-1 justify-evenly items-center max-lg:flex-col gap-14'>
      {REVIEWS.map(({imgURL, customerName, feedback, rating}) => (
        <ReviewCard
          imgURL={imgURL}
          customerName={customerName}
          rating={rating}
          feedback={feedback}
        />
      ))}
    </div>
  </section>
</section>
